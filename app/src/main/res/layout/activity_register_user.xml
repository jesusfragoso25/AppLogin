<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.registerUser"
    android:background="@drawable/loginbkg_4">

    <androidx.cardview.widget.CardView
        android:id="@+id/margin"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="25dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="163dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Register"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="124dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/passRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="264dp" />

            <EditText
                android:id="@+id/userRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="181dp" />

            <Button
                android:id="@+id/register"
                android:layout_width="213dp"
                android:layout_height="45dp"
                android:text="Registrarse"
                android:textColorHighlight="#4F4AE8"
                android:textColorLink="#4F4AE8"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="327dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese su Nombre"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="65dp" />

            <EditText
                android:id="@+id/nameRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"

                android:inputType="text"
                tools:layout_editor_absoluteX="66dp"
                tools:layout_editor_absoluteY="97dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese su usuario"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="158dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese su contraseÃ±a"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="241dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>